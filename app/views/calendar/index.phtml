    echo        "<li>";
    echo            sprintf("<textarea name='day%u_text' class='text_box'></textarea>", $day_number);
    echo            sprintf("<button type='submit' name='day%u_button' class='send_button'><div class='button_image_container'>üöÄ</div></button>", $day_number);
    echo        "</li>";
    echo    "</ul>";
    echo "</form>";
}

