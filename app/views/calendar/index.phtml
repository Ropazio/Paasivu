function print_daily_notes( ?string $day, array $notes ) : void {

    if (empty($notes)) {
        echo "<p class='text'>Ei merkint√∂j√§.</p>";
    }
    else {
        $no_notes = True;

        foreach ($notes as $note) {

            if ($note['day'] == $day) {
                echo "<form method='POST' action='" . site_url("calendar-delete_note/" . $note["note_id"]) . "' class='bullet_container'>";
                echo    "<ul class='bullet'>";
                echo        "<li>" . $note['note'] . "<button type='submit' class='delete_button'><div class='button_image_container'>‚ò†Ô∏è</div></button>" . "</li>";
                echo    "</ul>";
                echo "</form>";

                $no_notes = False;
            }

            else {
                continue;
            }
        }
        if ($no_notes) {
            echo "<p class='text'>Ei merkint√∂j√§.</p>";
        }
    }
}

